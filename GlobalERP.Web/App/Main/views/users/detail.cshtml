@using Abp.Authorization.Users
<div ng-controller="app.views.users.detail as vm">
    <div class="panel panel-primary question-detail-panel">
        <div class="panel-heading">
            

            </div>
        <div class="panel-body">
            <div class="form-group">
                <label>@L("UserName")</label>
                <input class="form-control" type="text" name="TenancyName" ng-model="vm.user.userName" required maxlength="@AbpUserBase.MaxUserNameLength">
            </div>

            <div class="form-group">
                <label>@L("Name")</label>
                <input type="text" name="Name" class="form-control" ng-model="vm.user.name" required maxlength="@GlobalERP.Users.User.MaxNameLength">
            </div>

            <div class="form-group">
                <label>@L("Surname")</label>
                <input type="text" name="Surname" class="form-control" ng-model="vm.user.surname" required maxlength="@GlobalERP.Users.User.MaxSurnameLength">
            </div>

            <div class="form-group">
                <label>@L("EmailAddress")</label>
                <input type="email" name="EmailAddress" class="form-control" ng-model="vm.user.emailAddress" required maxlength="@GlobalERP.Users.User.MaxEmailAddressLength">
            </div>

            <div class="form-group">
                <label>@L("Password")</label>
                <input type="password" name="Password" class="form-control" ng-model="vm.user.password" maxlength="@GlobalERP.Users.User.MaxPlainPasswordLength">
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" name="IsActive" ng-model="vm.user.isActive" value="true"> @L("IsActive")
                </label>
            </div>
        </div>
        </div>
</div>
